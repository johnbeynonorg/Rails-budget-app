<section class="vh-100 flex flex-column items-center">
 <%= render 'header' %>
 <main class="catagories-section w-100 pb3 flex flex-column" style="gap:1rem;flex:1">
    <p class="bg-white flex justify-between f4 pa3 fw6">
        <span class="o-50">Total amount</span>
        <span><%="$#{@user.payments.sum(:amount)}"%></span>
    </p>
 <%if @catagories.length.positive?%>  
 <% @catagories.each do |catagory| %>
     <%=render catagory %>
 <%end%>
 <%end%>
</main>
 <div class='new-category pt3 pb3 w-100 flex justify-center'>
    <%=link_to new_catagory_path, class:'w-90 tc pa3 ba b--white' do%>
        <button class="f3 fw5">New category</button>
    <%end%>
 </div>	
</section>